<Window x:Class="AudioPlayer.View.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer.View"
        mc:Ignorable="d"
        Title="UserMenu" Height="250" Width="300">
    <Grid>
        <Button x:Name="AddSong" Content="Add new song" HorizontalAlignment="Left"
                Command="{Binding AddSong, UpdateSourceTrigger=PropertyChanged}" Margin="33,25,0,0" VerticalAlignment="Top" Width="88"/>
        <Button x:Name="DeleteSong" Content="Delete song" HorizontalAlignment="Left"
                Command="{Binding DeleteSong, UpdateSourceTrigger=PropertyChanged}" Margin="33,62,0,0" VerticalAlignment="Top" Width="88"/>
        <Button x:Name="PlaySong" Content="Play a song" HorizontalAlignment="Left"
                Command="{Binding PlaySong, UpdateSourceTrigger=PropertyChanged}" Margin="33,99,0,0" VerticalAlignment="Top" Width="88"/>

    </Grid>
</Window>
